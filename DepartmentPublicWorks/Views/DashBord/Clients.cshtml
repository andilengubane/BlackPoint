
@{
    ViewBag.Title = "Clients";
}

<h2>Clients</h2>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<style>
	td {
		padding-top: 10px;
		padding-bottom: 10px;
	}

	.circle {
		height: 50px;
		width: 100px;
		border-radius: 50%;
	}

	.back {
		background: #F2F1F1;
		width: 100%;
		position: absolute;
		top: 0;
		bottom: 0;
	}

	.div-center {
		width: 1500px;
		height: 500px;
		position: absolute;
		left: 0%;
		right: 0%;
		top: 0;
		bottom: 15%;
		margin: auto;
		max-width: 150%;
		max-height: 100%;
		overflow: auto;
		padding: 1em 2em;
		display: table;
	}

	.borderless td, .borderless th {
		border: none;
	}

	div.content {
		display: table-cell;
		vertical-align: middle;
	}

	.footer {
		height: 50px;
		position: absolute;
		right: 0;
		bottom: 0;
		left: 0;
		padding: 1rem;
		background-color: #000000;
		text-align: center;
	}
</style>
<div>
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-header">
			<button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a href="#" class="navbar-brand">Black Point</a>
		</div>
		<div id="navbarCollapse" class="collapse navbar-collapse navbar-right">
			<ul class="nav navbar-nav">
				<li>@Html.ActionLink("DashBord", "Index", "DashBord")</li>
				<li>@Html.ActionLink("Report", "Report", "DashBord")</li>
				<li>@Html.ActionLink("Client Zone", "Clients", "DashBord")</li>
			</ul>
			<form class="navbar-form navbar-right">
				@Html.ActionLink("Sign Out", "Login", "Account", new { @class = "btn btn-primary", @id = "logout" })
			</form>
		</div>
	</nav>
</div>
<br />
<div class="back">
	<div class="div-center">
		<div class="panel panel-inverse">
			<div class="panel-heading">
				Clients
			</div>
			@using (Html.BeginForm())
			{
				<div class="panel-body">
					<p>Report</p>
				</div>
			}
		</div>
	</div>
</div>
<div class="footer"><strong></strong>.</div>